{
	"manifest_version":2,

	"name":"Awesome Cell Mapper",
	"short_name":"Awesome CM",
  	"author":"AbsoluteDouble",
	"description":"Tweaks to the cellmapper.net map, adds dark more, option to change EARFCN colours and other useful features.",
	"minimum_chrome_version":"8",
  	"incognito":"spanning",
	"version":"1.3.1",

	"browser_action": {
		"default_icon": {
		  	"32": "acm_32.png",
		  	"64": "acm_64.png"
		},
		"default_title": "Open CellMapper",
		"default_popup": "open.html"
	},
	"icons": {
		"32": "acm_32.png",
		"64": "acm_64.png"
	},
	"permissions": [
		"storage",
	  	"tabs"
	],
  	"content_scripts":[
	  	{
			"js":["jquery.js","page.js"],
			"css":["new.css"],
			"matches":["https://*.www.cellmapper.net/map*","http://*.www.cellmapper.net/map*"]
		}
	]
}